<% if @page.course.blank? %>
    <% content_for :title, @page.title %>
<% else %>
    <% content_for :title, @page.course.name + " - " + @page.title %>
<% end %>

<%= render :partial => "left_nav", :locals => {:current_semester_course => @page.current_semester_course, :page => @page} %>

<!-- necessary for the left navigation li items not to interfer with the height of the four tab interface -->
<style type="text/css">
    #tabs {
        overflow: hidden;
    }
</style>

<% if @page.course.blank? %>
    <h1 name="page">  <%= h @page.title %></h1>
<% else %>
    <h1 name="course"><%= h @page.course.name %></h1>
    <h2 name="page">  <%= h @page.title %></h2>
<% end %>

<% if params[:history] %>
    <%= render :partial => "show_history" %>
<% else %>
    <%= render :partial => "show_page" %>
<% end %>



